ENTRY(_start)

SECTIONS
{
    . = 1M; /* Load kernel at 1MB to match BIOS execution handoff */

    .text ALIGN(4K) : {
        *(.text)
    }

    .rodata ALIGN(4K) : {
        *(.rodata)
    }

    .data ALIGN(4K) : {
        *(.data)
    }

    .bss ALIGN(4K) : {
        *(COMMON)
        *(.bss)
    }
}
